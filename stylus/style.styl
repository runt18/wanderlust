@import 'nib'

shade_opacity = 0.7
shadow_opacity = 0.5
text_opacity = 0.8
border_opacity = 0.2
image_greyscale = 0.8
image_blur = 3px

html, body
  height: 100%

h1, h2
  text-align: center
  margin: 0
  text-shadow: 0 1px 0 rgba(0, 0, 0, shadow_opacity)

h1
  font-weight: 900
  margin: 30px 0 0
  font-size: 120px

h2
  font-size: 30px

a:hover
  text-decoration: none

.chrome-apps-link
  margin-top: -5em
  margin-left: -3em
  position: absolute
  
.chrome-apps-link a
  font-size: 1.4em

*
  box-sizing(border-box)

.clearfix:before, .clearfix:after
  content " "
  display table

.clearfix:after
  clear both

.clearfix
  *zoom 1

.left
  float left

.right
  float right

body
  font-family Helvetica, sans-serif
  margin 0

.wrapwrap
  position: fixed
  top: 0
  left: 0
  height: 100%
  width: 100%
  padding: -10px
  overflow: hidden

.wrapper
  background-color: black
  position: fixed
  top: -10px
  left: -10px
  height: -webkit-calc(100% + 20px)
  width: -webkit-calc(100% + 20px)
  // todo: too slow
  // -webkit-filter: grayscale(image_greyscale)
  // -webkit-filter: blur(image_blur)
  z-index: -10
  background-size: cover
  background-position: 0 center
  -webkit-transition: all 1s

.full-overlay
  height: 100%
  width: 100%
  z-index: 100
  background-color: black
  position: fixed
  top: 0
  left: 0

.overlay
  height: 100%
  width: 100%
  background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(rgba(0,0,0,0)), to(rgba(0,0,0,0.8)))

.container
  color: rgba(255, 255, 255, text_opacity)
  padding-top: 100px

.btn
  font-size: 40px
  margin: 0 auto
  display: block
  padding: 15px 30px

.facts
  margin: 0 !important

  font-size: 20px

  div
    text-align: center
    padding: 20px

hr
  border-top: 1px solid rgba(255, 255, 255, border_opacity)

.row
  margin: 20px 0

footer
  text-align: center
  margin-bottom: 20px

#logo
  height: 100px
  width: 100px
  position: absolute
  top: 20px
  left: 20px
